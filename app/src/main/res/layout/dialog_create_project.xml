<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.projectandroidsuite.viewmodel.TaskCreateEditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/taskTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:text="Title"
            app:layout_constraintBottom_toBottomOf="@+id/taskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/taskTitle" />

        <EditText
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            app:layout_constraintStart_toEndOf="@id/taskTitleText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/taskDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:text="Description"
            app:layout_constraintBottom_toBottomOf="@+id/taskDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskTitle" />

        <EditText
            android:id="@+id/taskDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onTextChanged="@{(text, start, before, count) -> viewModel.setDescription(text.toString())}"
            android:padding="@dimen/item_padding"
            app:layout_constraintStart_toEndOf="@id/taskDescriptionText"
            app:layout_constraintTop_toBottomOf="@id/taskTitle" />

        <TextView
            android:id="@+id/taskManagerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:text="Manager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonChooseManager"
            app:layout_constraintTop_toTopOf="@+id/buttonChooseManager" />

        <TextView
            android:id="@+id/buttonChooseManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:text="Choose manager"
            app:layout_constraintStart_toEndOf="@id/taskManagerText"
            app:layout_constraintTop_toBottomOf="@id/taskDescription" />

        <TextView
            android:id="@+id/taskTeamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:text="Team"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonChooseTeam"
            app:layout_constraintTop_toTopOf="@+id/buttonChooseTeam" />

        <TextView
            android:id="@+id/buttonChooseTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:text="Choose responsibles"
            app:layout_constraintStart_toEndOf="@id/taskTeamText"
            app:layout_constraintTop_toBottomOf="@id/buttonChooseManager" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonChooseTeam">

            <GridLayout
                android:id="@+id/teamLayout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:orientation="horizontal" />

        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>