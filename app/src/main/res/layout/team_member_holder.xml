<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="ifCanBeCancelled"
            type="Boolean"
            />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_margin="4dp"
        card_view:cardBackgroundColor="@color/main"
        card_view:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/team_member_image"
                android:layout_width="match_parent"
                android:gravity="start"
                android:layout_height="match_parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/team_member_text"
                android:layout_width="wrap_content"
                android:gravity="end"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="match_parent"
                android:text="text"
                android:textColor="@color/grey"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@id/team_member_image" />


            <ImageView
                android:id="@+id/button_dismiss"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_cancel"
                android:visibility="@{ifCanBeCancelled ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toEndOf="@id/team_member_text"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>